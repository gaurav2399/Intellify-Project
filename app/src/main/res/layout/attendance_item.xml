<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="15dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="@drawable/item_layout"
                                                       android:layout_centerInParent="true">

        <TextView
                android:text="Class"
                android:layout_width="wrap_content"
                android:layout_height="24dp" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:id="@+id/subjectText"
                android:layout_marginTop="16dp" android:textSize="18sp" android:textColor="#000"
                android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <TextView
                android:text="Operating System"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/subjectText"
                app:layout_constraintBaseline_toBaselineOf="@+id/subjectText"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/className"/>
        <TextView
                android:text="Attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/attendanceText" android:textSize="18sp" android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/subjectText" android:layout_marginTop="16dp"/>
        <TextView
                android:text="10%"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/attendanceText"
                app:layout_constraintBaseline_toBaselineOf="@+id/attendanceText"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/attendance"/>
        <TextView
                android:text="Total Lectures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/totalLecturesText" app:layout_constraintTop_toBottomOf="@+id/attendanceText"
                android:layout_marginTop="16dp" android:textSize="18sp" android:textColor="#000"/>
        <TextView
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/totalLecturesText"
                app:layout_constraintBaseline_toBaselineOf="@+id/totalLecturesText"
                android:layout_marginStart="5dp"
                android:id="@+id/totalLectures"/>
        <TextView
                android:text="Present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/presentText" app:layout_constraintTop_toBottomOf="@+id/totalLecturesText"
                android:layout_marginTop="16dp" android:textSize="18sp" android:textColor="#000"/>
        <TextView
                android:text="20"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/presentText"
                app:layout_constraintBaseline_toBaselineOf="@+id/presentText"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/present"/>
        <TextView
                android:text="Absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/absentText" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/presentText"
                android:layout_marginTop="16dp" android:textSize="18sp" android:textColor="#000"/>

        <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/absentText"
                app:layout_constraintBaseline_toBaselineOf="@+id/absentText"
                android:id="@+id/absent" android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>